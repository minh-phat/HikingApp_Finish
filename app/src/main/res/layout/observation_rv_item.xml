<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius"
    android:layout_marginBottom="20dp"
    android:id="@+id/RLObservationDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:radius="20dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Observation: "
                android:layout_width="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idTVNameObservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:layout_width="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/idTVDateObservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black">
                </TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <RelativeLayout
                android:id="@+id/EditObservationbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onEditRLTClick"
                android:background="@color/DarkBlue"
                android:layout_marginRight="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                </TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pencil"
                    android:layout_alignParentRight="true">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/DeleteObservationbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="DeleteHikeHandle"
                android:background="@color/DarkBlue"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                </TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete"
                    android:layout_alignParentRight="true">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>