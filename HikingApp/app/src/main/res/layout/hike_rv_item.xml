<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:elevation="5dp"
    android:padding="5dp"
    android:background="@drawable/corner_radius"
    android:id="@+id/layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:radius="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:layout_width="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idTVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >
                <RelativeLayout
                    android:id="@+id/Editbtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onEditRLTClick"
                    android:background="@color/DarkBlue"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pencil"
                        android:layout_alignParentRight="true">
                    </ImageView>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Deletebtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="DeleteHikeHandle"
                    android:background="@color/DarkBlue"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/delete"
                        android:layout_alignParentRight="true">
                    </ImageView>


                </RelativeLayout>




            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Location : "
                    android:layout_width="90dp">

                </TextView>
                <TextView
                    android:id="@+id/idTVLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/black">
                </TextView>

            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_width="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idTVDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date "
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Length : "
                    android:layout_width="90dp">

                </TextView>
                <TextView
                    android:id="@+id/idTVLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Length"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Level : "
                android:layout_width="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idTVLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level "
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Participaints : "
                    android:layout_width="90dp">

                </TextView>
                <TextView
                    android:id="@+id/idTVParticipaints"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Participaints"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Description : "
                android:layout_width="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idTVDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>